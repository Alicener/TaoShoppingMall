<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sun.taoshoppingmalls.MainActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_gravity="center"
        android:background="@color/top_background" >

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/large_textsize" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_largeheight"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity__margin_bottom"
            android:padding="@dimen/activity__margin_bottom"
            android:text="用户名:"
            android:textSize="@dimen/normal_textsize" />

        <EditText android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity__margin_top"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity__margin_top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity__margin_bottom"
            android:padding="@dimen/activity__margin_bottom"
            android:text="密    码:"
            android:textSize="@dimen/normal_textsize" />

        <EditText  android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity__margin_top"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape1" />
    </LinearLayout>

    <Button  android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity__margin_top"
        android:layout_marginRight="@dimen/activity__margin_top"
        android:layout_marginTop="@dimen/layout_smallheight"
        android:background="@color/top_background"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/large_textsize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView  android:id="@+id/regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity__margin_top"
            android:layout_marginTop="@dimen/activity__margin_top"
            android:text="快速注册"
            android:textColor="@color/top_background"
            android:textSize="@dimen/middle_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity__margin_top"
            android:layout_marginRight="@dimen/activity__margin_top"
            android:layout_marginTop="@dimen/activity__margin_top"
            android:text="忘记密码?"
            android:textSize="@dimen/middle_textsize" />
    </RelativeLayout>
	
    <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/clickforweixin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                 android:layout_centerHorizontal="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/wxlogin" />

            <ImageView
                android:id="@+id/clickforqq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/clickforweixin"
                android:src="@drawable/qqlogin" />

            <ImageView
                android:id="@+id/clickforweibo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dip"
                android:layout_toRightOf="@id/clickforqq"
                android:src="@drawable/wblogin" />
            
            </LinearLayout>
            
</LinearLayout>
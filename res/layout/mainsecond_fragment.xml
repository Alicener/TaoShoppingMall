<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.sun.taoshoppingmalls.MainActivity" >

    <TextView
        android:id="@+id/nearby"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="#C7F4B1"
        android:gravity="center"
        android:text="附近"
        android:textSize="@dimen/large_textsize" />

    <TextView
        android:id="@+id/talk"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/activity__margin_bottom"
        android:layout_marginRight="@dimen/activity__margin_bottom"
        android:layout_weight="1"
        android:background="#97DAF9"
        android:gravity="center"
        android:text="话题"
        android:textSize="@dimen/large_textsize" />

    <TextView
        android:id="@+id/guitai"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="#F5B9D3"
        android:gravity="center"
        android:text="柜台"
        android:textSize="@dimen/large_textsize" />

</LinearLayout>
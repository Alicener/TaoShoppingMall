<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context="com.sun.taoshoppingmalls.MainActivity" >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/activity__margin_top"
        android:layout_marginRight="@dimen/activity__margin_top"
        android:layout_marginTop="@dimen/activity__margin_top"
        android:layout_marginBottom="@dimen/activity__margin_top"
        android:scaleType="fitXY"
        android:src="@drawable/ceshi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity__margin_top"
            android:layout_marginTop="@dimen/activity__margin_top"
            android:text="暑假大促"
            android:textSize="@dimen/large_textsize" />

        <TextView  android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity__margin_top"
            android:layout_marginTop="@dimen/activity__margin_top"
            android:text="乐乐趣图书"
            android:textColor="#f00"
            android:textSize="@dimen/normal_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView  android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end" 
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/activity__margin_top"
                android:text="格力空调电"
                android:textColor="@color/text_sizes"
                android:textSize="@dimen/normal_textsize" />

            <TextView  android:id="@+id/juli"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="2"
                android:layout_marginRight="@dimen/activity__margin_top"
                android:layout_marginTop="@dimen/activity__margin_top"
                android:text="500m"
                android:gravity="right"
                android:textColor="@color/text_sizes"
                android:textSize="@dimen/normal_textsize" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
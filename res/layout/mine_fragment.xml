<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chu.taoshoppingmall.MainActivity" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@color/top_background" 
        android:gravity="center"
        android:orientation="vertical">
      <com.sun.shoppingmall.customview.CircleImageView
            android:id="@+id/myimageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/header" />
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity__margin_top"
            android:text="用户名"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity__margin_top"
            android:text="店铺名称"
            android:textColor="@color/white" />
    </LinearLayout>
	 <RelativeLayout  
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:background="#3D9FDC" >

        <RatingBar
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:numStars="5"
            android:rating="3"
            android:layout_toRightOf="@+id/xiny" />

        <TextView
            android:id="@+id/xiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="信用：" />
        
        <TextView
            android:id="@+id/xinyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:textColor="#DD4E19"
            android:text="60%" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/xinyong"
            android:textColor="@color/white"
            android:text="好评率：" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#C8C7CC" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#C8C7CC" />

    <RelativeLayout  android:id="@+id/jiben"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView4"
            android:text="基本信息" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/t_g1" />
        
        <ImageView
            android:id="@+id/imageView90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/xiangyou" />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#C8C7CC" />

    <RelativeLayout  android:id="@+id/myremark"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView5"
            android:text="喜币管理" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/t_g2" />
        
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/xiangyou" />
    </RelativeLayout>
<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#C8C7CC" />

    <RelativeLayout  android:id="@+id/mypublic"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageVie"
            android:text="我的银行卡" />

        <ImageView
            android:id="@+id/imageVie"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/t_g3" />
        
        <ImageView
            android:id="@+id/ima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/xiangyou" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#C8C7CC" />

    <RelativeLayout  
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/yijina"
            android:text="意见反馈" />

        <ImageView
            android:id="@+id/yijina"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/t_g4" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/xiangyou" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#C8C7CC" />

    <RelativeLayout  
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/shezhi"
            android:text="设置" />

        <ImageView
            android:id="@+id/shezhi"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/t_g5" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/xiangyou" />
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity__margin_top"
        android:background="@color/background" />
     <RelativeLayout  
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/banben"
            android:text="版本更新" />

        <ImageView
            android:id="@+id/banben"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/t_g6" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="v2.00" />
    </RelativeLayout>
</LinearLayout>

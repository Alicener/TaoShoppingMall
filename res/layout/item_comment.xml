<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background_jianxi"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp" 
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/commentimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ceshi" />

        <TextView
            android:id="@+id/commenttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/commentimg"
            android:layout_toRightOf="@+id/commentimg"
            android:text="TextView" />

        <TextView
            android:id="@+id/commentbtn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/tv_red"
            android:layout_alignBottom="@+id/commentimg"
            android:layout_alignParentRight="true"
            android:textColor="@color/red"
            android:text="评价晒单" />

    </RelativeLayout>

</LinearLayout>
